<link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.css" rel="stylesheet">

{# templates/partials/quick_links.html #}
<div class="card shadow-lg border-border">
  <div class="card-header">
    <h2 class="text-2xl font-bold text-foreground">Latest / Quick Links</h2>
  </div>

<!-- Option A: Entire card wrapped in an anchor (simple) -->
<a href="/register/" class="text-decoration-none" aria-label="Go to Register page">
  <div class="card h-100 shadow-sm border-0" style="max-width: 22rem;">
    <div class="card-body d-flex justify-content-between align-items-center">
      <div class="d-flex align-items-center">
        <div class="icon-square bg-light text-primary rounded-3 me-3 p-3">
          <i class="bi bi-clipboard-plus fs-3"></i>
        </div>
        <div>
          <h5 class="card-title mb-1 fw-bold text-dark">Register</h5>
          <p class="card-text text-muted small mb-0">Register for upcoming events</p>
        </div>
      </div>

      <i class="bi bi-arrow-right fs-5 text-secondary"></i>
    </div>

    

  </div>
</a>

  </div>
  <div class="card-content mt-6">
    <div class="grid grid-cols-1 md:grid-cols-3 gap-4">
      {% for link in quick_links %}
      <a href="{{ link.href }}" class="group">
        <div class="p-6 rounded-lg border border-border bg-card hover:bg-accent/5 hover:border-accent transition-all duration-300 h-full shadow-sm hover:shadow-md">
          <div class="flex items-start justify-between">
            <div class="flex-1">
              <div class="w-12 h-12 rounded-lg bg-accent/10 flex items-center justify-center mb-4 group-hover:bg-accent/20 transition-colors">
                {{ link.icon|safe }}
              </div>

              <h3 class="font-semibold text-lg mb-2 text-foreground group-hover:text-accent transition-colors">
                {{ link.title }}
              </h3>
              <p class="text-sm text-muted-foreground">{{ link.description }}</p>
            </div>

            <div class="flex-shrink-0">
              {{ arrow_icon|safe }}
            </div>
          </div>
        </div>
      </a>
      {% endfor %}
    </div>
  </div>
</div>




<style>
/* Quick links big-card styles */
.quick-links-wrapper {
  border-radius: 12px;
  box-shadow: 0 18px 40px rgba(20,30,60,0.06);
  padding: 32px;
  background: #ffffff;
}

/* make cards larger and more airy */
.quick-card {
  border-radius: 12px;
  border: 1px solid #e9eef2;
  min-height: 150px;           /* increase height */
  transition: transform .18s ease, box-shadow .18s ease;
  background: #fff;
}

/* More internal padding */
.quick-card .card-body {
  padding: 1.6rem;             /* p-4-ish */
}

/* Icon box larger */
.icon-square-lg {
  width: 64px;
  height: 64px;
  display: inline-flex;
  align-items: center;
  justify-content: center;
  border-radius: 14px;
  background: #e9fbfa;         /* soft teal-ish */
}

/* larger icon and title */
.icon-square-lg i {
  font-size: 1.6rem;           /* make icon bigger */
  color: #18a6a0;
}
.quick-card .card-title {
  font-size: 1.35rem;          /* bigger title */
  margin-bottom: 0.25rem;
}
.quick-card .card-text {
  font-size: 0.975rem;
  color: #6b7280;              /* muted */
}

/* arrow bigger */
.quick-card .card-arrow {
  font-size: 1.25rem;
  color: #6b7280;
}

/* hover lift */
.quick-card:hover {
  transform: translateY(-6px);
  box-shadow: 0 18px 30px rgba(20,30,60,0.08);
}

/* ensure anchor text-decoration none and keep full-card clickable spacing */
.quick-card a.text-decoration-none { color: inherit; }
</style>
