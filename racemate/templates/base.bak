<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>{% block title %}Racemate{% endblock %}</title>

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.8/dist/css/bootstrap.min.css"
    
          rel="stylesheet"
          integrity="sha384-sRIl4kxILFvY47J16cr9ZwB07vP4J8+LH7qKQnuqkuIAvNWLzeN8tE5YBujZqJLB"
          crossorigin="anonymous">

    {% block extra_css %}{% endblock %}
  </head>

  <body>
    {% include "partials/nav.html" %}

    {% if messages %}
      {% for message in messages %}
        <div class="alert alert-{{ message.tags }} text-center m-2">{{ message }}</div>
      {% endfor %}
    {% endif %}

    <main class="container my-4">
      {% block content %}{% endblock %}
    </main>

    <footer class="text-center py-3 border-top text-muted small">
      &copy; {% now "Y" %} Racemate â€” Built with Django & Bootstrap.
    </footer>


    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.8/dist/js/bootstrap.bundle.min.js"
            integrity="sha384-FKyoEForCGlyvwx9Hj09JcYn3nv7wiPVlz7YYwJrWVcXK/BmnVDxM+D2scQbITxI"
            crossorigin="anonymous"></script>

    {% block extra_js %}{% endblock %}
  </body>
</html>
